<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DatumNewsApp.Pages.SwitcherPage"
             Title="Page Layout w/ Indicator">

    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="Center" Spacing="20">
            <Button x:Name="btnNone" HorizontalOptions="Center" Text="No Page Indicator"></Button>
            <Button x:Name="btnDots" HorizontalOptions="Center" Text="Dots"></Button>
            <Button x:Name="btnTabs" HorizontalOptions="Center" Text="Tabs"></Button>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>